# set aliases
--type-set=pdf=.pdf
--type-set=txt=.md,.markdown,.text,.rst,.txt,.org,.rst
--type-set=org=.org

# always color, even if piping to a another program
--color
--flush

# follow symlinks
#--follow

# comprehensively searches all files
#--all

# include txt files in searches
#--text
#--nobinary

# search case-insensitive, unless search term explictly has capitalization
--smart-case

# ignore dirs
--ignore-dir="/home/timv/projects/data"
